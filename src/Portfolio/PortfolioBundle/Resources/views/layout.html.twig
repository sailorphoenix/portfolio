{% endblock %}
{% block body %}
  {% if asset(message) %}
    <div id="message">
      {{ message }}
    </div>
  {% endif %}
  {% block content %} {% endblock %}
{% endblock %}

{% block footer %}
  <footer>
    <div id="footer-content">
      <div id="a-propos">
        <h3>A propos</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        Nunc feugiat elementum nulla, sit amet ullamcorper ipsum dictum sit amet.
        Phasellus purus arcu, fermentum vel lacinia vitae, varius sagittis leo. </p>
      </div>
      <div id="reseaux-sociaux" class="hi-icon-wrap hi-icon-effect-8">
        <h3>Coins réseaux</h3>
      <a href="#" class="hi-icon hi-icon-facebook">Facebook</a>
      <a href="#" class="hi-icon hi-icon-twitter">Twitter</a>
      <a href="#" class="hi-icon hi-icon-viadeo">Viadéo</a>
      <a href="#" class="hi-icon hi-icon-linkedin">Linkdlin</a>
    </div>
    <div id="formulaire-contact">
      <h3>Formulaire de contact</h3>
        <form id="footer-contact-form" action="{{ path ('portfolio_portfolio_homepage') }}" method="post" {{ form_enctype(form) }}>
          {{ form_errors(form) }}
          {{ form_widget(form) }}
          {{ form_row(form.nom) }}
          {{ form_row(form.prenom) }}
          {{ form_row(form.mail) }}
          {{ form_row(form.objet) }}
          {{ form_row(form.message) }}
          {{ form_rest(form) }}
          <input type="submit" value="Envoyer le message"/>
        </form>
    </div>
    </div>
  </footer>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/lib/classie.js')}}"></script>
  <script src="{{ asset('js/lib/mlpushmenu.js')}}"></script>
  <script>
      new mlPushMenu( document.getElementById( 'mp-menu' ), document.getElementById( 'trigger' ) );
  </script>
{% endblock %}