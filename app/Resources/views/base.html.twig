<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block head %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />        
    <link rel="stylesheet" type="text/css" href="{{ asset('css/common.css')}}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('css/html_responsive.css')}}" />
    <link href='http://fonts.googleapis.com/css?family=Orbitron:400,700,500,900' rel='stylesheet' type='text/css'>
    {% block stylesheets %}{% endblock %}
    <script src="{{ asset('js/lib/jquery2.1.1_min.js')}}"></script>
    <script src="{{ asset('js/lib/jquery-validate.min.js')}}"></script>
    <script src="{{ asset('js/documentready.js')}}"></script>
	{% block scripts %}{% endblock %}
  </head>
  <body>
    <div class="container">
      <!-- Push Wrapper -->
      <div id="background_all">
      </div>
      <div class="mp-pusher" id="mp-pusher">
        <!-- mp-menu -->
        {% block menu %}{% endblock %}
        <div class="scroller"><!-- this is for emulating position fixed of the nav -->
          <div class="scroller-inner">
            <div id="access-menu"><a href="#" id="trigger" class="menu-trigger"><span>Accès Menu</span></a></div>
            <header>
              <a href="{{ path('portfolio_portfolio_homepage') }}"><h1>Anaïs Hervouin</h1>
                <span>
                  Analyste et Développeuse WEB en technologie PHP
                </span>
              </a>
            </header>
            <div id="main-content">
              {% block body %}{% endblock %}
            </div>
            {% block footer %}{% endblock %}           
          </div>
        </div>
      </div><!-- /pusher -->
    </div>
    {% block javascripts %}{% endblock %}
  </body>
</html>